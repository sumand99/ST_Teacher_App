<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/llOptions">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:background="@drawable/loginbg"
        android:orientation="vertical">



    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"

        android:background="@drawable/loginimg"></ImageView>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">

   <EditText
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:textColorHint="@color/colorPrimaryDark"
       android:hint="User Id"
       android:layout_marginTop="@dimen/_20sdp"
       android:paddingTop="@dimen/_6sdp"
       android:paddingBottom="@dimen/_6sdp"
       android:paddingLeft="@dimen/_15sdp"
       android:paddingRight="@dimen/_5sdp"
       android:background="@drawable/login_edittext"></EditText>

    <EditText
        android:layout_width="fill_parent"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:textColorHint="@color/colorPrimaryDark"
        android:paddingRight="@dimen/_5sdp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/login_edittext"
        android:layout_height="wrap_content"></EditText>

    </LinearLayout>
    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/login"
        android:layout_below="@+id/attendantRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_48ssp"
        android:layout_marginRight="@dimen/_48ssp"
        android:onClick="login"
        android:gravity="center"
        android:padding="@dimen/_8ssp"
        android:textSize="20dp"
        android:text="Login"
        android:textColor="#011923"
        app:buttonGradientStartColor="@color/colordefault"
        app:buttonGradientEndColor="@color/colordefault"
        app:buttonCornerRadius="@dimen/_25sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:text="ForgotPassword?"></TextView>

</LinearLayout>
</ScrollView>